<h3 class="center">Sign in to continue</h3>
<%= form_for(:static_page, url: signin_path, remote: true) do |f| %>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <div class="col-xs-12">
        <div class="input-group" >
          <span class="input-group-addon">@</span>
          <%= f.text_field :email, {class: "form-control", placeholder: "Email"} %>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon"><%= icon "key" %></span>
          <%= f.text_field :password, {class: "form-control", placeholder: "Password"} %>
        </div>
      </div>
    </div>
  </div>
  <div class="row center">
    <%= f.submit "Sign in", { class: "btn btn-primary btn-large"} %>
  </div>
  <% end %>

