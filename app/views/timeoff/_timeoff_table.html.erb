<div class="datatable-div">
  <table class="table table-striped" id="timeoff_table">
    <thead class="subtle">
      <tr>
        <td>
          <%= icon('user fa-2x') %>
          <p>User</p>
        </td>
        <td>
          <%= icon('calendar fa-2x') %>
          <p>Date</p>
        </td>
        <td>
          <%= icon('minus-square-o fa-2x') %>
          <p>Time off</p>
        </td>
        <td class="hidden-xs">
          <%= icon('toggle-up fa-2x') %>
          <p>Submitted</p>
        </td>
        <td>
          <%= icon('check-square-o fa-2x') %>
          <p>Approved</p>
        </td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @timeoff_hours.each do |t| %>
        <tr>
          <td><%= t.user.full_name %></td>
          <td><%= t.start_date.strftime("%m/%d/%Y") %></td>
          <td><%= t.timesheet_hours.sum(:timeoff_hours) %></td>
          <td class="hidden-xs"><%= t.updated_at.strftime("%m/%d/%Y") %></td>
          <td><%= t.status %></td>
          <td><%= link_to FA_EDIT, edit_user_timesheet_path( t.user.id, t.id), class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>