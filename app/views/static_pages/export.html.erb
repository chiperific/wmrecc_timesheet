<h3 class="center subtle">Export Records</h3>

<div class="row well well-adjusted" id="export_search_div">
  <div class="col-xs-6">
    <h4>Limit records?</h4>
  </div>
  <div class="col-xs-6 align-right">
    <%= icon('times', '', id: 'export_searchbar_close', class: 'btn btn-default') %>
  </div>
  <div class="col-xs-12" id="export_searchbar">
    <%= render 'shared/export_searchbar' %>
  </div>
</div>

<div class="row" id="export_btn">
  <%= link_to 'Export to CSV', export_path, class: "move-right btn btn-primary" %>
</div>

<div id="export-data" class="datatable-div">
  <table class="table table-striped table-center" id="export-table">
    <%= render 'export_table' %>
  </table>
</div>

