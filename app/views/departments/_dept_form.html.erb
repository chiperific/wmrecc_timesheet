<%= form_for( @dept, reomte: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row col-xs-12 col-md-6">
    <div class="input-group">
      <span class="input-group-addon"><%= icon "arrow-right" %></span>
      <%= f.text_field :name, {class: "form-control", placeholder: "Name"} %>
    </div>
  </div>
  <div class="row col-xs-12 col-md-6">
    <div class="input-group input-selector">
      <span class="input-group-addon addon-selector"><%= icon "cogs" %></span>
      <%= f.select :active, options_for_select([["Active", true], ["Inactive", false]], @active_status ), {}, {class: "form-control selector"} %>
    </div>
  </div>
  <div class="row center col-xs-6 col-md-6">
    <button type="submit" id="submit" class="btn btn-success">
      <%= FA_SUBMIT %>
    </button>
  </div>
  <div class="row center col-xs-6 col-md-6">
    <%= link_to FA_CANCEL, departments_path, { class: "btn btn-danger btn-large"}  %>
  </div>
<% end %>
